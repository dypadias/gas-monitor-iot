@page "/configuracoes"
@using GasMonitor.App.Models
@inject HttpClient Http

<h3>⚙️ Configuração do Recipiente</h3>

<div class="row">
    <div class="col-md-6">
        <div class="card">
            <div class="card-header">Produtos Disponíveis</div>
            <ul class="list-group list-group-flush">
                @if (produtos == null)
                {
                    <li class="list-group-item">Carregando...</li>
                }
                else
                {
                    @foreach (var p in produtos)
                    {
                        <li class="list-group-item d-flex justify-content-between align-items-center">
                            <div>
                                <strong>@p.Nome</strong> <br/>
                                <small class="text-muted">
                                    R$ @p.PrecoPago | Tara: @p.TaraKg Kg | Cap: @p.CapacidadeTotalKg Kg
                                </small>
                            </div>
                            
                            @if (p.Ativo)
                            {
                                <span class="badge bg-success">ATIVO</span>
                            }
                            else
                            {
                                <button class="btn btn-sm btn-outline-primary" @onclick="() => AtivarProduto(p.Id)">
                                    Usar Este
                                </button>
                            }
                        </li>
                    }
                }
            </ul>
        </div>
    </div>

    <div class="col-md-6">
        <div class="card">
            <div class="card-header">Cadastrar Novo Tipo</div>
            <div class="card-body">
                <div class="mb-3">
                    <label>Nome (Ex: Botijão P45)</label>
                    <input class="form-control" @bind="novoProduto.Nome" />
                </div>
                
                <div class="row">
                    <div class="col-md-6 mb-3">
                        <label>Tara (Vazio) Kg</label>
                        <input type="number" class="form-control" @bind="novoProduto.TaraKg" />
                    </div>
                    <div class="col-md-6 mb-3">
                        <label>Capacidade (Líquido) Kg</label>
                        <input type="number" class="form-control" @bind="novoProduto.CapacidadeTotalKg" />
                    </div>
                </div>

                <div class="mb-3">
                    <label>Preço Pago (R$)</label>
                    <div class="input-group">
                        <span class="input-group-text">R$</span>
                        <input type="number" step="0.01" class="form-control" @bind="novoProduto.PrecoPago" placeholder="0,00" />
                    </div>
                    <small class="text-muted">Usado para calcular quanto dinheiro você já gastou.</small>
                </div>

                <button class="btn btn-primary w-100 mt-2" @onclick="SalvarNovo">Salvar Configuração</button>
            </div>
        </div>
        
        <div class="mt-3 alert alert-info">
            <strong>Dica:</strong> Para cadastrar o preço correto, crie um novo produto (ex: "P13 Ouro") com o valor atual do mercado.
        </div>
    </div>
</div>

@code {
    private List<ProdutoConfig>? produtos;
    private ProdutoConfig novoProduto = new ProdutoConfig();

    protected override async Task OnInitializedAsync()
    {
        await CarregarLista();
    }

    private async Task CarregarLista()
    {
        try 
        {
            produtos = await Http.GetFromJsonAsync<List<ProdutoConfig>>("api/produtos");
        }
        catch (Exception ex)
        {
            Console.WriteLine("Erro ao carregar produtos: " + ex.Message);
        }
    }

    private async Task AtivarProduto(int id)
    {
        await Http.PostAsync($"api/produtos/{id}/ativar", null);
        await CarregarLista();
    }

    private async Task SalvarNovo()
    {
        await Http.PostAsJsonAsync("api/produtos", novoProduto);
        novoProduto = new ProdutoConfig(); // Limpa o formulário
        await CarregarLista();
    }
}