@code {
    private List<ProdutoConfig>? produtos;
    private ProdutoConfig produtoForm = new ProdutoConfig { CapacidadeTotalKg = 13, TaraKg = 15 }; // Padr√£o P13
    private int editandoId = 0;

    protected override async Task OnInitializedAsync()
    {
        await CarregarLista();
    }

    private async Task CarregarLista()
    {
        try
        {
            produtos = await Http.GetFromJsonAsync<List<ProdutoConfig>>("api/produtos");
        }
        catch (Exception ex)
        {
            Console.WriteLine($"Erro: {ex.Message}");
        }
    }

    private async Task Salvar()
    {
        if (editandoId == 0)
        {
            // Criar Novo
            await Http.PostAsJsonAsync("api/produtos", produtoForm);
        }
        else
        {
            // O Backend precisa ter um endpoint PUT para editar, ou usamos o truque de excluir/criar
            // Se ainda n√£o tens o PUT no Controller, adiciona no pr√≥ximo passo.
            // Por enquanto, vou assumir que tens ou vamos adicionar.
            
            // Para n√£o quebrar agora, vamos usar a l√≥gica simples:
            // O Backend atual aceita criar novos. Se quiseres editar a s√©rio, 
            // precisas adicionar o m√©todo [HttpPut] no ProdutosController.cs
            
            // GAMBIARRA TEMPOR√ÅRIA (Se n√£o quiseres mexer no backend hoje):
            // Cria um novo com os dados atualizados e apaga o velho visualmente? N√£o, vamos fazer direito.
            // Vou te mandar o c√≥digo do Controller atualizado a seguir.
            
            // Tenta enviar para um endpoint de update (que vamos criar)
            await Http.PutAsJsonAsync($"api/produtos/{editandoId}", produtoForm);
        }

        CancelarEdicao();
        await CarregarLista();
    }

    private void PreencherEdicao(ProdutoConfig p)
    {
        editandoId = p.Id;
        // Clona o objeto para n√£o editar a lista diretamente antes de salvar
        produtoForm = new ProdutoConfig 
        { 
            Id = p.Id, 
            Nome = p.Nome, 
            TaraKg = p.TaraKg, 
            CapacidadeTotalKg = p.CapacidadeTotalKg, 
            PrecoPago = p.PrecoPago,
            Ativo = p.Ativo
        };
    }

    private void CancelarEdicao()
    {
        editandoId = 0;
        produtoForm = new ProdutoConfig { CapacidadeTotalKg = 13, TaraKg = 15 };
    }

    private async Task AtivarProduto(int id)
    {
        await Http.PostAsync($"api/produtos/{id}/ativar", null);
        await CarregarLista();
    }

    private async Task ExcluirProduto(int id)
    {
        bool confirmado = await JS.InvokeAsync<bool>("confirm", "Tem certeza que deseja excluir?");
        if (confirmado)
        {
            await Http.DeleteAsync($"api/produtos/{id}");
            await CarregarLista();
        }
    }
}